<Window x:Class="CrewDragonHMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrewDragonHMI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ProgressBar x:Name="FuelIndicator" RenderTransformOrigin="0.5,0.5" Minimum="0" Maximum="100" Margin="558,167,-77,183">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <TextBox Name="fuelText" HorizontalAlignment="Left" Margin="655,385,0,0" Text="Fuel: 100%" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="F" HorizontalAlignment="Left" Margin="643,35,0,0" VerticalAlignment="Top" Height="53" Width="24" FontSize="36"/>
        <Label Content="E" HorizontalAlignment="Left" Margin="643,298,0,0" VerticalAlignment="Top" Height="53" Width="24" FontSize="36"/>
        <Slider Name="directionSlider" HorizontalAlignment="Left" Margin="163,164,0,0" VerticalAlignment="Top" Width="120" Maximum="180" Minimum="-180" Value="0" Thumb.DragCompleted="DirectionSlider_DragCompleted"/>
        <TextBox Name="directionText" HorizontalAlignment="Left" Margin="148,199,0,0" Text="Direction: 0 Degrees" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"/>
        <Slider Name="speedSlider" HorizontalAlignment="Left" Margin="472,164,0,0" VerticalAlignment="Top" Width="120" Minimum="0" Maximum="1000" RenderTransformOrigin="0.5,0.5" Value="0" Thumb.DragCompleted="SpeedSlider_DragCompleted">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <TextBox Name="speedText" HorizontalAlignment="Left" Margin="478,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Speed: 0 KM/S"/>
        <CheckBox Name="warpDrive" Content="WARP DRIVE" HorizontalAlignment="Left" Margin="243,324,0,0" VerticalAlignment="Top" Checked="warpDrive_Checked" Unchecked="warpDrive_Unchecked"/>
    </Grid>
</Window>
