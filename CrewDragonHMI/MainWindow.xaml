<Window x:Class="CrewDragonHMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrewDragonHMI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ProgressBar Name="BatteryIndicator" RenderTransformOrigin="0.5,0.5" Minimum="0" Maximum="100" Margin="637,64,11,283">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <TextBox Name="BatteryIndicatorLabel" HorizontalAlignment="Left" Margin="653,195,0,0" BorderThickness="0" Text="Battery Level:" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="120"/>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="0" Margin="298,235,0,0" VerticalAlignment="Top" Width="60"/>
        <CheckBox Name="GeneratorPower" HorizontalAlignment="Left" Margin="517,58,0,0" VerticalAlignment="Top" Unchecked="GeneratorPower_Unchecked" Checked="GeneratorPower_Checked" Height="111" Width="112"/>
        <TextBox HorizontalAlignment="Left" Margin="513,195,0,0" BorderThickness="0" Text="Generator Status" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
