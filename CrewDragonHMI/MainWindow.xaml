<Window x:Class="CrewDragonHMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrewDragonHMI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ProgressBar Name="BatteryIndicator" HorizontalAlignment="Left" Height="43" Margin="113,203,0,0" VerticalAlignment="Top" Width="196" RenderTransformOrigin="0.5,0.5" Minimum="0" Maximum="100" ValueChanged="BatteryIndicator_ValueChanged">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0"/>
                    <RotateTransform Angle="-90.76"/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <TextBox Name="BatteryIndicatorLabel" HorizontalAlignment="Left" Margin="159,371,0,0" Text="Battery:" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="0" Margin="298,235,0,0" VerticalAlignment="Top" Width="60"/>
        <CheckBox Name="GeneratorPower" Content="Generator Power" HorizontalAlignment="Center" Margin="0,205,0,0" VerticalAlignment="Top" Unchecked="GeneratorPower_Unchecked" Checked="GeneratorPower_Checked"/>

    </Grid>
</Window>
